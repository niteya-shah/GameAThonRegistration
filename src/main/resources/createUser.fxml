<?import javafx.scene.layout.GridPane?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<GridPane xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="180" vgap="30" styleClass="root">
  <padding><Insets top="25" right="25" bottom="25" left="250"/></padding>

  <Label style="-fx-font-weight: bold;" text="Login" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.columnSpan="3"/>
  <Label text="Enter Registration Number" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2"/>
  <TextField fx:id="registrationNumber" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.columnSpan="2"/>
  <Label text="Enter name" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="2"/>
  <TextField fx:id="name" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.columnSpan="2"/>
  <Label text="Enter surname" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="2"/>
  <TextField fx:id="surname" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.columnSpan="2"/>
  <Label text="Enter password" GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.columnSpan="2"/>
  <PasswordField fx:id="password" GridPane.columnIndex="1" GridPane.rowIndex="4" GridPane.columnSpan="2"/>
  <Label text="Select Year" GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.columnSpan="2"/>
  <ComboBox fx:id="Year" GridPane.columnIndex="1" GridPane.rowIndex="5" GridPane.columnSpan="2"/>
  <Label text="Enter Mobile Number" GridPane.columnIndex="0" GridPane.rowIndex="6" GridPane.columnSpan="2"/>
  <TextField fx:id="mobile_no" GridPane.columnIndex="1" GridPane.rowIndex="6" GridPane.columnSpan="2"/>

  <Button fx:id="createUser" mnemonicParsing="false" text="Create Account" GridPane.columnIndex="1" GridPane.rowIndex="7" GridPane.columnSpan="3"/>
</GridPane>
