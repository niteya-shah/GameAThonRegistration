<AnchorPane xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1">
  <VBox alignment="CENTER" spacing="10.0">
    <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <Label fx:id="lbl" style="-fx-font-weight: bold;"/>
    <Label style="-fx-font-weight: bold;" text="Please Select the Event you wish to register for"/>
    <HBox alignment="CENTER_LEFT" spacing="20.0">
      <CheckBox fx:id="fifa" text="Fifa"/>
      <CheckBox fx:id="dota2" text="Dota 2"/>
      <CheckBox fx:id="csgo" text="CSGO"/>
      <CheckBox fx:id="r6s" text="R6S"/>
    </HBox>
    <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="50.0"/>
    </padding>
    <HBox alignment="CENTER_LEFT" spacing="20.0">
      <Button fx:id="makePayment" text="Make Payment and Register"/>
      <Label fx:id="allPaid"/>
    </HBox>
  </VBox>

</AnchorPane>
